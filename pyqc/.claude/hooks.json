{
  "hooks": {
    "PostToolUse": {
      "Write,Edit,MultiEdit": {
        "command": "uv run python scripts/pyqc_hooks.py ${file}",
        "onFailure": "warn",
        "timeout": 15000
      },
      "Bash": {
        "command": "uv run python scripts/git_hooks_detector.py '${command}' '${output}'",
        "onFailure": "warn",
        "timeout": 30000
      }
    }
  }
}