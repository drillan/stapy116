{
  "hooks": {
    "PostToolUse": {
      "Write,Edit,MultiEdit": {
        "command": "uv run python scripts/pyqc_hooks.py ${file}",
        "onFailure": "warn",
        "timeout": 15000
      }
    },
    "PreGitCommit": {
      "command": "uv run python scripts/git_pre_commit.py",
      "onFailure": "error",
      "timeout": 60000
    },
    "PostGitCommit": {
      "command": "uv run python scripts/git_post_commit.py",
      "onFailure": "warn",
      "timeout": 15000
    }
  }
}